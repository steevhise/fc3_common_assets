{
  "name": "fc3_main",
  "version": "0.0.4",
  "description": "The new Freecycle site - Freecycle 3.0!",
  "main": "lib/index.js",
  "repository": "gitolite@devserver.freecycle.org:fc3_main",
  "dependencies": {
    "@freecycle/common-hapi-plugins": "*",
    "@freecycle/freecycle_graphql_schema": "*",
    "@freecycle/freecycle_node_dal": "*",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "bell": "^8.2.0",
    "browser-sync": "^2.12.1",
    "crumb": "^6.0.3",
    "foundation-sites": "^6.2.1",
    "good": "^7.0.2",
    "good-console": "^6.1.2",
    "graphql": "0.5.0",
    "graphql-relay": "^0.4.2",
    "hapi": "^14.2.0",
    "hapi-authorization": "^3.0.2",
    "hapi-cache-buster": "~0.4.0",
    "hapi-error": "^1.0.4",
    "hapi-named-routes": "~0.3.0",
    "hapi-plug-routes": "^1.0.2",
    "hapi-sass": "^2.1.0",
    "inert": "^3.2.0",
    "jquery": "^3.1.0",
    "masonry-layout": "^4.0.0",
    "moment": "^2.17.1",
    "nodemon": "^1.9.1",
    "path": "^0.12.7",
    "swig-templates": "^2.0.1",
    "trumbowyg": "^2.3.0",
    "vision": "^4.1.0",
    "webpack": "^1.12.15"
  },
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js . | snazzy",
    "watch:javascript": "webpack ./src/assets/js/main.js ./public/assets/js/main.bundle.js  --module-bind 'js=babel-loader' --watch",
    "build:javascript": "webpack ./src/assets/js/main.js ./public/assets/js/main.bundle.js  --module-bind 'js=babel-loader'",
    "build:trumbowyg": "cp -rp ./node_modules/trumbowyg/dist ./public/assets/trumbowyg",
    "build": "babel index.js  -d lib",
    "browsersync": "sleep 5; browser-sync start --proxy localhost:8000 --files ./src/ --reload-delay 1200",
    "serve": "npm run build:javascript && npm run build && node ./lib/index.js",
    "start": "npm run watch:javascript & npm run dev & npm run browsersync",
    "dev": "npm run build & nodemon -e js,html --watch index.js --watch ./src/routes --watch ./src/views --watch .src/packages lib/index.js",
    "test": "lab --reporter spec --recursive --timeout 20s"
  },
  "author": "The Freecycle Network",
  "license": "UNLICENSED",
  "devDependencies": {
    "code": "^3.0.2",
    "eslint": "^3.15.0",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "lab": "^11.0.1",
    "longjohn": "^0.2.11",
    "semistandard": "*",
    "snazzy": "*"
  },
  "semistandard": {
    "ignore": [
      "src/assets/"
    ]
  }
}
